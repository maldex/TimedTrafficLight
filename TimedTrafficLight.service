[Unit]
Description=RaspI2C TimedTrafficLight service
After=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/RaspI2C/TimedTrafficLight
ExecStart=/usr/bin/python3 ./TimedTrafficLight.py
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
